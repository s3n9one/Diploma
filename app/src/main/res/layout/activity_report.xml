<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/reportPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Report">

        <TextView
            android:id="@+id/reportPageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35sp"
            android:text="@string/reports"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btnDatePicker1"
            android:layout_width="120dp"
            android:layout_height="60sp"
            android:layout_below="@id/reportPageText"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="20sp"
            android:text="@string/choseDate"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:backgroundTint="@color/grayButton"
            app:cornerRadius="10dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"/>

        <TextView
            android:id="@+id/tvSelectedDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnDatePicker1"
            android:layout_marginLeft="20sp"
            android:text="Дата не выбрана" />

        <Button
            android:id="@+id/btnDatePicker2"
            android:layout_width="120dp"
            android:layout_height="60sp"
            android:layout_below="@id/reportPageText"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:text="@string/choseDate"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:backgroundTint="@color/grayButton"
            app:cornerRadius="10dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/tvSelectedDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnDatePicker2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="25dp"
            android:text="Дата не выбрана" />

        <Button
            android:id="@+id/getReport"
            android:layout_width="120dp"
            android:layout_height="60sp"
            android:layout_marginStart="140sp"
            android:layout_marginTop="179sp"
            android:onClick="getReport"
            android:paddingHorizontal="10sp"
            android:text="@string/getReport"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="10dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/tvReportResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="visible"
            android:layout_below="@id/getReport"/>

        <Button
            android:id="@+id/goBack"
            android:layout_width="120dp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/tvReportResult"
            android:onClick="goBack"
            android:text="@string/goBack"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:backgroundTint="@color/grayButton"
            app:cornerRadius="10dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

    </RelativeLayout>
</ScrollView>